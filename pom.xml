<project>
    <modelVersion>4.0.0</modelVersion>

    <groupId>net.luminu.paper</groupId>
    <artifactId>paper-parent</artifactId>
    <version>dev-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>LumiPaper (Parent)</name>

    <build>
        <defaultGoal>install</defaultGoal>
        <finalName>${project.artifactId}</finalName>
    </build>
    <modules>
        <module>LumiPaper-API</module>
        <module>LumiPaper-Server</module>
    </modules>

    <distributionManagement>
        <snapshotRepository>
            <id>luminu</id>
            <url>http://repo.luminu.net/repository/luminu-snapshots/</url>
        </snapshotRepository>
        <repository>
            <id>luminu</id>
            <url>http://repo.luminu.net/repository/luminu-releases/</url>
        </repository>
    </distributionManagement>
</project>
